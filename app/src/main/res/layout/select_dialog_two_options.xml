<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_alert_dialog_positive"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/bg_alert_btn_mint_rounded"
        android:text="@string/alert_btn_neg"
        android:textColor="@drawable/font_mint_alert_btn"
        android:textStyle="bold"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHighlight"/>

    <Button
        android:id="@+id/btn_alert_dialog_negative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/bg_alert_btn_yellow_rounded"
        android:text="@string/alert_btn_pos"
        android:textColor="@drawable/font_yellow_alert_btn"
        android:textStyle="bold"
        android:textSize="18sp" />

</LinearLayout>