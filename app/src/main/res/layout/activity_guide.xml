<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDimmedBlack"
    tools:context=".GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/walkthrough_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/layoutIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <View
                android:id="@+id/pagerIndicator1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_black"/>
            <View
                android:id="@+id/pagerIndicator2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"/>
            <View
                android:id="@+id/pagerIndicator3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"/>
            <View
                android:id="@+id/pagerIndicator4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"/>
            <View
                android:id="@+id/pagerIndicator5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"/>
            <View
                android:id="@+id/pagerIndicator6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"/>

        </LinearLayout>



        <Button
            android:id="@+id/btnNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/next"/>
    </RelativeLayout>


</RelativeLayout>
